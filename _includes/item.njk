{% extends "base.njk" %}
{% block content %}
<h1 class="title-centered">{{ title }}</h1>
<div class="element-centered widest">
<p></p>
<ul>
  <li><b>author: </b>{{author}}</li>
  <li><b>date: </b>{{month}} {{day}} {{year}}</li>
{% for tag in tags %}
  <li>{{ tag }}</li>
{% endfor %}
</ul>
<img width="200" src="{{ '/assets/img/' | url }}{{ image }}" />

{{ content | safe }}

</div>

{% endblock %}